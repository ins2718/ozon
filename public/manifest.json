{
    "name": "ozon",
    "description": "",
    "version": "2.0",
    "manifest_version": 3,
    "icons": {},
    "action": {},
    "permissions": [
        "notifications",
        "tabs",
        "activeTab",
        "storage",
        "webRequest",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "https://pvz.avito.ru/*",
                "https://turbo-pvz.ozon.ru/*"
            ],
            "js": [
                "content-script.js",
                "pdf.worker.min.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "sounds/success.mp3",
                "sounds/warning.mp3",
                "sounds/error.mp3",
                "sounds/special.mp3",
                "video.html"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}